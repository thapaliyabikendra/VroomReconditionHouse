@model VroomReconditionHouse.Models.ViewModels.ModelViewModel
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit Model of Vehicle</h2>
<form method="post" , action="Edit">
    <input hidden asp-for="Model.Id" />
    <div class="row form-group">

        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>

        <div class="col-4">
            <select asp-for="Model.MakeId" asp-items="Model.CSelectListItem(Model.Makes)" class="form-control"></select>
        </div>


    </div>

    <div class="row form-group">

        <div class="col-2">
            <label asp-for="Model.Name"></label>
        </div>

        <div class="col-4">
            <input asp-for="Model.Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>



</form>
