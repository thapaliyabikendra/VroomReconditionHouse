@model VroomReconditionHouse.Models.ViewModels.BikeViewModel
@using VroomReconditionHouse.Extensions
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Details of Bike</h2>
<form >
    <div class="row form-group">
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-4">
            <select disabled="disabled" asp-for="Bike.MakeID" asp-items="Model.Makes.ToSelectListItem()" class="form-control" id="Make"></select>
        </div>
        <div class="col-2">
        </div>
        <div class="col-4">
            <img src="~/@Model.Bike.ImagePath" width="150" height="100" />
        </div>
    </div>

    <div class="row form-group">
        <div class="col-2">
            <label asp-for="Models"></label>
        </div>
        <div class="col-4">
            <select disabled="disabled" asp-for="Bike.ModelID" asp-items="Model.Models.ToSelectListItem()" class="form-control" id="Model"></select>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-2">
            <label asp-for="Bike.Year"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.Year" class="form-control" />
        </div>
    </div>

    <div class="row form-group">
        <div class="col-2">
            <label asp-for="Bike.Mileage"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.Mileage" class="form-control" />
        </div>
    </div>

    <div class="row form-group">
        <div class="col-2">
            <label asp-for="Bike.Price"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.Price" class="form-control" />
        </div>
        <div class="col-auto">
            <label asp-for="Bike.Currency"></label>
        </div>
        <div class="col-4">
            <select disabled="disabled" asp-for="Bike.Currency" asp-items="Model.Currencies.ToSelectListItem()" class="form-control"></select>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-2">
            <label asp-for="Bike.Feature"></label>
        </div>
        <div class="col-4">
            <textarea disabled="disabled" asp-for="Bike.Feature" type="text" class="form-control"></textarea>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-2">
            <label asp-for="Bike.SellerName"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.SellerName" class="form-control" />
        </div>
    </div>

    <div class="row form-group">
        <div class="col-2">
            <label asp-for="Bike.SellerEmail"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.SellerEmail" class="form-control" />
        </div>
    </div>

    <div class="row form-group">
        <div class="col-2">
            <label asp-for="Bike.SellerPhone"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.SellerPhone" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>
</form>
